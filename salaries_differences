SELECT 
    ABS((SELECT MAX(e.salary) 
    FROM db_employee e
    JOIN db_dept d
    ON e.department_id = d.id 
    WHERE d.department = 'marketing')
    
- (SELECT MAX(e.salary)
    FROM db_employee e
    JOIN db_dept d
    ON e.department_id = d.id 
    WHERE d.department = 'engineering')) salary_difference
